# AllMiTools Server Configuration

# Server port (default: 3000)
PORT=3000

# Templates directory (relative to server root)
TEMPLATES_DIR=templates

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Private Use Password
PRIVATE_USE_PASSWORD=password_hash

# Database Configuration
# PostgreSQL host (default: localhost)
DB_HOST=localhost

# PostgreSQL port (default: 5432)
DB_PORT=5432

# PostgreSQL database name
DB_NAME=allmitools

# PostgreSQL user
DB_USER=allmitools_user

# PostgreSQL password (use a strong, unique password)
DB_PASSWORD=your_secure_password

# PostgreSQL SSL mode (disable, require, verify-ca, verify-full)
DB_SSL_MODE=disable